    "description": "If you know, you know",
    "author": "IchChefDuNixx",
    "permissions":[
        "webRequest",
        "webRequestBlocking",
        "webRequestFilterResponse",
        "nativeMessaging",
        "tabs"
    ],
    "host_permissions": [
        "*://*.synapse-games.com/*",
        "*://game248326.konggames.com/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_specific_settings": {
